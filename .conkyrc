################
# - RAM/Swap - #
################
${voffset 2}${font Poky:size=18}M${font}${voffset -8}${template5 MEMORY\ AND\ SWAP}
${template2 RAM: $mem $memmax $memperc}
#${if_match $memperc <85}${goto 32}${membar 6,155}${endif}${if_match $memperc >=85}${goto 32}${color red}${membar 6,155}${color}${endif}
${voffset 10}${template2 SWAP: $swap $swapmax $swapperc}
#${goto 32}${swapbar 6,155}
#
#################
# - Disk & FS - #
#################
${voffset 2}${font Poky:size=18}y${font}${voffset -8}${template5 DISKS\ AND\ FILESYSTEMS}
${template6 -\ Crucial\ SSD sda}
${template6 -\ Trascend\ SSD sdb}
${goto 32}$hr
${template3 /}
${template3 /home}
#
################
# - Network - #
###############
${voffset 2}${color0}${font Poky:size=16}w${font}${voffset -8}${template5 NETWORK}
${if_gw}${template1 Network: Online}
  # Public IP
  ${goto 32}${color1}Public IP: ${alignr}${color2}${execi 600 wget -q -O - checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//'}
  ${template1 Gateway: $gw_ip\ ($gw_iface)}
  ${template1 Nameserver: $nameserver}
  ${if_up eth0}${template1 Interface: eth0}
    ${goto 32}${color1}IP-Address: ${alignr}${color2}${addr eth0}
    ${goto 32}${color1}Down:${offset 5}${color2}${downspeedf eth0}${offset 1}KiB${goto 145}${color1}Up:${offset 5}${color2}${upspeedf eth0}${offset 1}KiB
    ${goto 32}${downspeedgraph eth0 20,100 999999 0050BF -t}${goto 145}${upspeedgraph eth0 20,100 999999 0050BF -t}\
  ${endif}\
#
  ${if_up wlan0}${template1 Interface: wlan0}
    ${goto 32}${color1}IP-Address: ${alignr}${color2}${addr wlan0}
    ${goto 32}${color1}Down:${offset 5}${color2}${downspeedf wlan0}${offset 1}KiB${goto 145}${color1}Up:${offset 5}${color2}${upspeedf wlan0}${offset 1}KiB
    ${goto 32}${downspeedgraph wlan0 20,100 999999 0050BF -t}${goto 145}${upspeedgraph wlan0 20,100 999999 0050BF -t}\
  ${endif}\
#
${endif}

